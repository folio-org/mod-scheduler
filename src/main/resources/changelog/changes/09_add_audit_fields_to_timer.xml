<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

  <changeSet id="add-audit-fields-to-timer" author="dmtkachenko">
    <comment>Add audit tracking fields to timer table</comment>
    <addColumn tableName="timer">
      <column name="created_by_user_id" type="uuid">
        <constraints nullable="true"/>
      </column>
      <column name="created_date" type="timestamp with time zone" defaultValueComputed="CURRENT_TIMESTAMP">
        <constraints nullable="false"/>
      </column>
      <column name="updated_by_user_id" type="uuid">
        <constraints nullable="true"/>
      </column>
      <column name="updated_date" type="timestamp with time zone" defaultValueComputed="CURRENT_TIMESTAMP">
        <constraints nullable="false"/>
      </column>
    </addColumn>
  </changeSet>

</databaseChangeLog>
